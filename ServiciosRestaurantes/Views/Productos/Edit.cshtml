@model ServiciosRestaurantes.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Nombre" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Descripcion" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="Descripcion" class="form-control" />
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Precio" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="Precio" class="form-control" />
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="IdRestaurante" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <select name="products" class="form-control" asp-items="@ViewBag.restaurantes"></select>
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="IdRestaurante" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
