@model ServiciosRestaurantes.Models.VistaOrden
@{
    ViewData["Title"] = "NuevaOrden";
}

<h1>Nueva Orden</h1>

<div class="row">
    <div class="col-sm-6">
        <h2>Seleccione el:</h2>
    </div>
    <div class="col-sm-6">
        <h2>Restaurante</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Seleccionar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Restaurante.IdRestaurante" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <select name="products" class="form-control" asp-items="@ViewBag.restaurantes"></select>
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="Restaurante.IdRestaurante" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <a asp-action="AgregarProducto" class="btn btn-outline-info">Agregar Producto</a>
            <hr />
            Lista de productos
            <hr />
            <div class="form-group">
                <input type="submit" value="Guardar Pedido" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-warning">Regresar al Listado</a>
            </div>
        </form>
    </div>
</div>
<hr />

