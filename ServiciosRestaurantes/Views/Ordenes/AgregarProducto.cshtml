@model ServiciosRestaurantes.Models.OrdenProducto
@{
    ViewData["Title"] = "AgregarProducto";
}

<h1>Agregar Producto</h1>


<div class="row">
    <div class="col-sm-6">
        <h2>Seleccione el:</h2>
    </div>
    <div class="col-sm-6">
        <h2>Producto</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Seleccionar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="IdProducto" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <select name="IdProducto" class="form-control" asp-items="@ViewBag.productos"></select>
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="IdProducto" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Cantidad" class="control-label"></label>
                    </div>
                    <div class="col-sm-5">
                        <input asp-for="Cantidad" class="form-control" />
                    </div>
                    <div class="col-sm-5">
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <a asp-action="AgregarProducto" class="btn btn-outline-info">Agregar Producto</a>
                <a asp-action="Index" class="btn btn-outline-warning">Regresar al Listado</a>
            </div>
        </form>
    </div>
</div>
<hr />